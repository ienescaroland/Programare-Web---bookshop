{% extends 'base.html.twig' %}

{% block body %}

	<h3> Welcome to your profile, {{ app.user.username }}! </h3>

	<h4> Purchased books: </h4>

	<table class="table table-hover"> 
		<thead> 
		 	<tr> 
		 		<th></th> 
		 		<th>Title</th> 
		 		<th>Author</th>
				<th></th>
	 		</tr> 
	 	</thead> 
	 	<tbody> 
	 	{% for book in ubooks %}
	 		<tr> 
		 		<th scope="row"></th> 
		 			<td>{{book.title}}</td> 
		 			<td>{{book.author}}</td> 
		 			<td>
		 				<a href="/details/{{book.id}}" class="btn btn-primary btn-xs">
		 					<span class="glyphicon glyphicon-info-sign"></span> View</a>
		 			</td>	 			
		 	</tr> 
	 	{% endfor %}
		</tbody> 
	</table>

{% endblock %}